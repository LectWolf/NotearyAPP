<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="FabSaveStyle">
        <item name="android:contentDescription">@string/text_noty_icon</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AboutContentTitleStyle">
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="AboutContentBodyStyle">
        <item name="android:layout_marginTop">@dimen/dimen_12</item>
        <item name="android:fontFamily">@font/universal_std</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:fontFamily">@font/universal_std</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="DialogMessage" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_12</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:fontFamily">@font/universal_std</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

</resources>
